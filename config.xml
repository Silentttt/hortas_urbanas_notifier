<?xml version='1.0' encoding='utf-8'?>
<widget id="com.viriato.hortasurbanas" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="Fullscreen" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <name>Hortas Urbanas</name>
    <description>
        Notificador de publicações relacionadas com Hortas Urbanas de várias fontes.
    </description>
    <author email="joaosilentteixeira@gmail.com">
        João Teixeira
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.2.0" />
    <plugin name="cordova-plugin-restful" spec="0.0.4" />
</widget>
